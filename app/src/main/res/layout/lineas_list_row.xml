<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/lineaColorView"
            android:layout_width="11dp"
            android:layout_height="49dp">

        </RelativeLayout>

        <ImageView
            android:id="@+id/imgFlecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/flecha_dcha" />

        <TextView
            android:id="@+id/idLineaLabel"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/lineaColorView"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/nombreLineaLabel"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@id/imgFlecha"
            android:layout_toRightOf="@id/idLineaLabel"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/black" />

    </RelativeLayout>

</RelativeLayout>
